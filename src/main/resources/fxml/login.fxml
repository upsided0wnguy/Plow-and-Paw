<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.LoginController">
    <children>
        <HBox spacing="0" alignment="CENTER" prefHeight="640.0" prefWidth="980.0">
            <!-- Left: Auth form with padding -->
            <StackPane prefWidth="490" alignment="CENTER_LEFT">
                <VBox styleClass="auth-left" spacing="24.0" alignment="CENTER" maxWidth="420" style="-fx-padding: 0 32 0 32;">
                    <Label text="PLOW AND PAW" styleClass="auth-title"/>
                    <Label text="Welcome back! Login to continue your farming adventure." styleClass="auth-subtitle"/>
                    <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"/>
                    <HBox spacing="12" alignment="CENTER">
                        <Button text="Login" onAction="#handleLogin" styleClass="button-main"/>
                        <Hyperlink text="Forgot password?" onAction="#handleForgotPassword" styleClass="link"/>
                    </HBox>
                    <Label fx:id="errorLabel" styleClass="auth-error"/>
                    <HBox alignment="CENTER" spacing="8">
                        <Label text="Don't have an account?" styleClass="hint-text"/>
                        <Hyperlink text="Sign up" onAction="#handleSignup" styleClass="link"/>
                    </HBox>
                </VBox>
            </StackPane>
            <!-- Right: Mascot/Theme image -->
            <StackPane styleClass="auth-panel-right" prefWidth="490" alignment="CENTER">
                <ImageView fitWidth="450" fitHeight="620" preserveRatio="true" styleClass="image-glow">
                    <image>
                        <Image url="@/images/login.png"/>
                    </image>
                </ImageView>
            </StackPane>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@/css/dashboard_modern.css"/>
    </stylesheets>
</AnchorPane>