<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.ResetPasswordController">
    <children>
        <HBox spacing="0" alignment="CENTER" prefHeight="640.0" prefWidth="980.0">
            <!-- Left: Reset form -->
            <StackPane prefWidth="490" alignment="CENTER_LEFT">
                <VBox styleClass="auth-left" spacing="24.0" alignment="CENTER" maxWidth="420" style="-fx-padding: 0 32 0 32;">
                    <Label text="Reset Password" styleClass="auth-title"/>
                    <Label text="Enter your email to receive an OTP code." styleClass="auth-subtitle"/>
                    <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
                    <Button text="Send OTP" fx:id="sendOtpBtn" onAction="#handleSendOtp" styleClass="button-main"/>
                    <TextField fx:id="otpField" promptText="Enter OTP" styleClass="text-field"/>
                    <PasswordField fx:id="newPasswordField" promptText="New Password" styleClass="password-field"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" styleClass="password-field"/>
                    <Label fx:id="errorLabel" styleClass="auth-error"/>
                    <HBox spacing="16" alignment="CENTER">
                        <Button text="Reset Password" onAction="#handleResetPassword" styleClass="button-main"/>
                        <Hyperlink text="Back to Login" onAction="#handleBackToLogin" styleClass="link"/>
                    </HBox>
                </VBox>
            </StackPane>
            <!-- Right: Mascot/Theme image -->
            <StackPane styleClass="auth-panel-right" prefWidth="490" alignment="CENTER">
                <ImageView fitWidth="450" fitHeight="620" preserveRatio="true" styleClass="image-glow">
                    <image>
                        <Image url="@/images/reset.png"/>
                    </image>
                </ImageView>
            </StackPane>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@/css/dashboard_modern.css"/>
    </stylesheets>
</AnchorPane>
