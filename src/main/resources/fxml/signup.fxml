<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.SignupController">
    <children>
        <HBox spacing="0" alignment="CENTER" prefHeight="640.0" prefWidth="980.0">
            <!-- Left: Signup form -->
            <StackPane prefWidth="490" alignment="CENTER_LEFT">
                <VBox styleClass="auth-left" spacing="20.0" alignment="CENTER" maxWidth="420" style="-fx-padding: 0 32 0 32;">
                    <Label text="Create Account" styleClass="auth-title"/>
                    <Label text="Join the Plow and Paw farming adventure!" styleClass="auth-subtitle"/>
                    <TextField fx:id="nameField" promptText="Full Name" styleClass="text-field"/>
                    <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
                    <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="password-field"/>
                    <HBox spacing="12">
                        <TextField fx:id="otpField" promptText="OTP" styleClass="text-field" prefWidth="120"/>
                        <Button text="Send OTP" onAction="#handleSendOtp" styleClass="button-main"/>
                    </HBox>
                    <Button text="Register" onAction="#handleRegister" styleClass="button-main" prefWidth="180"/>
                    <Label fx:id="errorLabel" styleClass="auth-error"/>
                    <HBox alignment="CENTER" spacing="8">
                        <Label text="Already have an account?" styleClass="hint-text"/>
                        <Hyperlink text="Back to login" onAction="#handleBack" styleClass="link"/>
                    </HBox>
                </VBox>
            </StackPane>
            <!-- Right: Mascot/Theme image -->
            <StackPane styleClass="auth-panel-right" prefWidth="490" alignment="CENTER">
                <ImageView fitWidth="450" fitHeight="620" preserveRatio="true" styleClass="image-glow">
                    <image>
                        <Image url="@/images/signup.png"/>
                    </image>
                </ImageView>
            </StackPane>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@/css/dashboard_modern.css"/>
    </stylesheets>
</AnchorPane>