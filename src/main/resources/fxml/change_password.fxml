<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.ui.ChangePasswordController"
            prefWidth="400" prefHeight="365"
            style="-fx-background-color: #fffbe8; -fx-background-radius: 16; -fx-padding: 36 30 36 30;">
    <VBox spacing="17" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Change Password"
               style="-fx-font-size: 26px; -fx-font-family: 'Poppins', 'Segoe UI', sans-serif; -fx-font-weight: 900; -fx-text-fill: #f4a259;"/>
        <Label text="Please enter your current and new password"
               style="-fx-font-size: 14px; -fx-font-family: 'Poppins', 'Segoe UI', sans-serif; -fx-text-fill: #443e2f;"/>

        <PasswordField fx:id="currentPasswordField" promptText="Current Password" styleClass="password-field"/>
        <PasswordField fx:id="newPasswordField" promptText="New Password" styleClass="password-field"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" styleClass="password-field"/>

        <Label fx:id="statusLabel" styleClass="auth-error" wrapText="true" />

        <HBox spacing="18" alignment="CENTER">
            <Button text="Update Password" onAction="#handleUpdatePassword"
                    styleClass="button-main"/>
            <Button text="Close" onAction="#handleClose"
                    style="-fx-font-family: 'Poppins'; -fx-font-size: 15px; -fx-background-radius: 14; -fx-padding: 8 26; -fx-background-color: #f3f3f7; -fx-text-fill: #333;"/>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@/css/auth_theme.css"/>
    </stylesheets>
</AnchorPane>
