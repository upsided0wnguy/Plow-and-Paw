<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="20"
      style="-fx-background-radius: 16; -fx-padding: 32; -fx-background-color: #FFF7EB;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.ui.GameModeSelectionController">
    <Label text="Choose Game Mode" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <HBox alignment="CENTER" spacing="32">
        <Button fx:id="soloBtn" text="Solo"
                style="-fx-font-size: 18px; -fx-background-color: #FFA947; -fx-text-fill: white; -fx-background-radius: 12;"/>
        <Button fx:id="multiplayerBtn" text="Multiplayer"
                style="-fx-font-size: 18px; -fx-background-color: #1BC47D; -fx-text-fill: white; -fx-background-radius: 12;"/>
    </HBox>
    <stylesheets>
        <URL value="@/css/auth_theme.css"/>
    </stylesheets>
</VBox>
